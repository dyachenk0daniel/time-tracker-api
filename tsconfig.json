{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@interfaces/*": [
        "interfaces/*"
      ],
      "@app/*": [
        "app/*"
      ],
      "@entities/*": [
        "entities/*"
      ],
      "@infrastructure/*": [
        "infrastructure/*"
      ],
      "@shared/*": [
        "shared/*"
      ]
    },
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": [
    "./*.js",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
